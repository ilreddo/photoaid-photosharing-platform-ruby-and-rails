<h3>Hi <%= current_user.first_name || (current_user.name if is_charity?) %>!</h3>

<div class="row">
  <div class="span4">
    <%= link_to image_tag(current_user.profile_picture.thumb.url), current_user.profile_picture.url %>
  </div>
  <div class="span8">
    <p><%= current_user.description %></p>
  </div>
</div>
<button>
<%= link_to "Edit your profile", edit_user_registration_path %>
</button>
<button>
<%= link_to "Log out", destroy_user_session_path, method: :delete %>
</button>