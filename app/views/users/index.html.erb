<h3>Hi <%= is_charity? ? current_user.name : current_user.first_name %>!</h3>

<div class="row">
  <div class="col-md-4">
    <%= link_to image_tag(current_user.profile_picture.thumb.url), current_user.profile_picture.url %>
  </div>
  <div class="col-md-8">
    <p><%= current_user.description %></p>
    <%= link_to "Edit your profile", edit_user_registration_path, class: "btn btn-secondary" %>
    <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "btn btn-secondary" %>
  </div>
</div>
<br>

<% if is_charity? %>
  <% current_user.campaigns.each do |campaign| %>
    <div>
      <%= campaign.title %>
      <%= image_tag campaign.campaign_logo.thumb %>
    </div>
  <% end %>
<% else %>
  <% current_user.photos.each do |photo| %>
    <div>
      <%= photo.title %>
    </div>
    <% end %>
<% end %>